<h2><%= t :new_sign_up %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %><%= t :characters_minimum %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>  

  <div class="field">
    <%= f.label :postal_code %><br>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code %><br>
    <%= f.text_field :prefecture_code, autofocus: true, autocomplete: "prefecture_code" %>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
  </div>

  <div class="field">
    <%= f.label :street %><br>
    <%= f.text_field :street %>
  </div>

  <div class="field">
    <%= f.label :other_address %><br>
    <%= f.text_field :other_address, autofocus: true, autocomplete: "other_address" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br>
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" %>
  </div>

  <div class="actions">
    <%= f.submit t(:sign_up) %>
  </div>
<% end %>

<%= render "users/shared/links" %>
